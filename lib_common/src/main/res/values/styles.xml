<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  按钮圆形波纹效果，通过theme属性引入,且其中重要属性android:background要设置为无边界的波纹  -->
    <style name="RippleButton">
        <!--点击后波纹的颜色-->
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">#FAFAFA</item>
        <!--效果半径-->
        <item name="android:radius">20dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <!--  提交按钮样式  -->
    <style name="SubmitStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_content</item>
        <item name="android:textColor">@color/text_invert</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_press_color_main_radius_max</item>
    </style>

</resources>
